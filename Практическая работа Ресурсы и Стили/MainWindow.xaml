<Window x:Class="Практическая_работа_Ресурсы_и_Стили.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_работа_Ресурсы_и_Стили"
        mc:Ignorable="d"
        Title="Практическая работа Ресурсы и Стили" Height="300" Width="260">
    <Grid Background="#FFD1D1D1">
        <TextBox x:Name="txtBx1" HorizontalAlignment="Left" Height="24" Margin="55,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Style="{StaticResource tf}" />
        <Button x:Name="Result" Content="Определить результат" HorizontalAlignment="Left" Margin="65,160,0,0" VerticalAlignment="Top" Width="130" Height="30" Click="Result_Click" Style="{StaticResource bbs}"/>
        <Button x:Name="Exit" Content="Выход" HorizontalAlignment="Left" Margin="90,200,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="Exit_Click" Style="{StaticResource bbs}"/>
        <Label x:Name="lb1" Content="Введите число от 1 до 7" HorizontalAlignment="Left" Margin="55,40,0,0" VerticalAlignment="Top" Height="25" Width="150"/>
        <Label x:Name="lb2" Content="" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top" Width="212" FontSize="12"/>
    </Grid>
</Window>
